<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Plate num</th>
      <th>Model</th>
      <th>Color</th>
      <th>Year</th>
      <th>Tags</th>
      <% if session[:user_id] %>
        <% if User.find(session[:user_id]).name == 'admin' %>
          <th colspan="3"></th>
        <% else %>
          <th>Rent??</th>
        <% end %>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.user_id %></td>
        <td><%= car.plate_num %></td>
        <td><%= car.model %></td>
        <td><%= car.color %></td>
        <td><%= car.year %></td>
        <td><%= raw tag_links(car.all_tags) %></td>

        <% if session[:user_id] %>
          <% if User.find(session[:user_id]).name == 'admin' %>
            <td><%= link_to 'Show', car %></td>
            <td><%= link_to 'Edit', edit_car_path(car) %></td>
            <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
            <td>
              <%= link_to rental_posts_path(:car_id => car.id), class: "btn btn-info btn-med"  do %>
                View posts for this car
              <% end %>
            </td>
          <% end %>
        <% end %>




      </tr>
    <% end %>
  </tbody>
</table>

<br>

